<%- include('header'); -%>
<div class="col-12">

    <div class="col-8 ledger-data shadow-lg bg-grey rounded mt-4" style="float: left;">
        <h2 class="h1 col-12 text-center bg-primary text-white rounded mt-2">Data</h2>
        <div class="mt-4">
            <% if(show) {%>
            <table class="table bg-dark text-white">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Sno.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(i=0;i<clients.length;i++){ %>
                        <tr>
                            <td class="text-center"><%= i+1 %></td>    
                            <td><%= clients[i].name %></td>
                            <td><a href="/ledger/<%= clients[i].id %>" class="text-white" >add/edit</a></td>
                            <td>
                                <form id="ninja" action="http://example.com/" method="POST"></form>
                                <button class="btn btn-danger " style="height: 30px;padding:0;padding-left: 15px;padding-right: 15px;" name="del" onclick="functionAlert('/rm-client/<%= clients[i].id %>','<%= clients[i].name %>');"><span aria-hidden="true">&times;</span></button>
                            </td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
        <%}else{%>
            <div class="alert alert-info" role="alert">
                No Data To Show
            </div>
        <%}%>
        </div>
        </div>
        <div class="col-3 ledger-form shadow-lg mt-4 ml-4 bg-warning rounded">
            <h2 class="h2 col-12 text-center rounded bg-secondary text-white">Company/Client Name</h2>
            <form action="/add-client" method="POST">
                <div class="justify-conent-center form-group">
                    <input class="form-control col-12 float-left" type="text" name="name" id="name" placeholder="Comany/Client Name" required>
                </div>
            
                <div class="col-12 my-1 ">
                    <button class="btn btn-info rounded mt-2 float-right col-4">Add</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function functionAlert(a,name){
            document.getElementById("ninja").action = a;
            var per = confirm("Do you want to delete Client Data of : "+name+" ?");
            if(per==true){
                document.getElementById("ninja").submit();
            }
        }
    </script>
<%- include('footer'); -%>